@model IEnumerable<Tedi_QA.Data.Entities.Question>
@{
    ViewData["Title"] = "Answered";
}

<h1>Answered Questions</h1>
<a asp-action="Questions">Unanswered Questions</a> 

<h4>Answered Questions</h4>


<table class="table table-bordered" id="dataTable" cellspacing="0">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>

            <th>
                Message
            </th>
            <th>
                Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>

                <td>
                    @item.message.Substring(0, 14) ...
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.questionDate)
                </td>
                <td>
                    <a asp-action="EditAnswer" asp-route-id="@item.Qid">Edit Answer</a> |
                    <a asp-action="Question" asp-route-id="@item.Qid">Read</a> |

                </td>
            </tr>
        }
    </tbody>
</table>
