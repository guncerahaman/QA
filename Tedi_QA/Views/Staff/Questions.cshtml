@model IEnumerable<Tedi_QA.Data.Entities.Question>

@{
    ViewData["Title"] = "Questions";
}
<a asp-action="Answered">Answered Questions</a> 
<h1>Unanswered Questions</h1>


<table class="table table-bordered" id="dataTable" cellspacing="0">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Phone
            </th>

            <th>
                Message
            </th>
            <th>
                Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            string color = "white";
            if (item.isRead == false)
            {
                color = "lightgreen";
            }


            <tr style="background-color:@color">

                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>

                <td>
                    @item.message.Substring(0, 14) ...
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.questionDate)
                </td>
                <td>
                    <a asp-action="Answer" asp-route-id="@item.Qid">Answer</a> |
                    <a asp-action="Question" asp-route-id="@item.Qid">Read</a> |
                </td>
            </tr>
        }

    </tbody>
</table>
<script></script>